<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">All Families</h1>
    <div class="text-center mb-3">
        <a href="/families/new" class="btn btn-primary">Create Family</a>
    </div>
    <% for (const family of families) { %> 
        <div class="col-lg-4 col-md-6 ms-auto me-auto" >
            <div class="card mb-3 py-3 px-3">
                <h4 class="card-title"><%= family.name %></h4>
                <div class="card-body">
                    <ul class="list-group mb-3">
                        <li class="list-group-item">
                            Members: <%= family.members.length %> 
                        </li>
                    </ul>
                    <a href="/families/<%= family._id %>" class="btn btn-primary">
                        View
                    </a>
                    <p class="text-muted mb-0">Last updated ... </p>
                </div>
            </div>
            <a href="/lists" class="">Back</a>
        </div>
    <% } %>
</div>
