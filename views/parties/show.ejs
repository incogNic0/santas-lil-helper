<% layout('layouts/boilerplate') %>

<h1 class="text-center"><%= party.name %></h1>
<div class="col-md-12">
	<div class="row">
		<div class="col-md-6 ms-auto me-auto">
			<div class="card mb-3">
				<div class="card-body text-center pb-0">
					<h5 class="mb-0">Started By:</h5>
          <p class="fw-bold"><%= party.creator.displayName %></p>
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="mb-0">Join By:</h5>
              <p class="date-full mb-0"><%= party.joinBy %></p>
            </div>
            <div>
              <h5 class="mb-0">Exchange Gifts:</h5>
              <p class="date-full mb-0"><%= party.exchangeOn %></p>
            </p>
            </div>
          </div>
				</div>
				<% if (loggedInUser && party.creator._id.equals(loggedInUser._id)) { %>
          <div class="party-secret-content text-center mt-0 mb-3">
            <h5>
              Secret Code:
              <span class="link fs-6" id="party-secret-show">show</span>
            </h5>
            <h3 class="hidden" id="party-secret"><%= party.secretCode %></h3>
          </div>
          <div class="text-center mb-3 d-flex justify-content-center">
            <a href="/parties/<%= party._id %>/edit" class="btn btn-primary">
              Edit
            </a>
            <button
              type="button"
              class="btn btn-danger ms-3"
              data-bs-toggle="modal"
              data-bs-target="#staticBackdrop"
            >
              Delete
            </button>

            <!-- Modal Confirm Delete -->
            <%- include('../partials/modals/delete') %> 
            <form 
              action="/parties/<%= party._id %>?_method=DELETE" 
              method="POST"
              class="hidden"
              id="delete-item"
            >
              <button type="submit" class="btn btn-danger">Confirm</button>
            </form>
          </div>
				<% } else { %>
          <form action="/parties/<%= party._id %>" method="POST">
            <button class="btn btn-primary" type="submit">Join</button>
          </form>
        <% } %> 
			</div>
		</div>
	</div>
	<div class="row">
    <div class="col-12">
      <div class="col-lg-6 col-md-8 ms-auto me-auto mb-3">
        <div class="card p-4">
          <div class="card-title row text-center">
              <h2 class="col-6">Member</h2>
              <h2 class="col-6">List</h2>
          </div>
          <div class="card-bodyp-0">
            <ul class="list-group text-center">
              <% for (const member of party.members) { %>
              <li class="list-group-item p-2">
                <div class="row">
                  <div class="col-6">
                    <a
                      href="/users/<%= member._id %>/public_profile"
                      class="link-secondary"
                    >
                      <%= member.displayName %>
                    </a>
                  </div>
                  <div class="col-6">
                    
                  </div>
                </div>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>

<script src="/js/parties.js"></script>