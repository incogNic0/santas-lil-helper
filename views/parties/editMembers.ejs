<% layout('layouts/boilerplate') %>

<h1 class="text-center">Members</h1>
<div class="col-md-4 m-auto mb-3">
  <div class="card p-4">
    <h4 class="text-center">Select Members to Remove:</h2>
    <div class="card-body p-0">
        <form 
        action="/parties/<%= party._id %>/members?_method=PUT"
        method="POST"
        id="members"
        >
          <% for (const [i,member] of party.members.entries()) { %>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="members"
                value="<%= member._id %>"
              />
              <label class="form-check-label">
                <a href="/users/<%= member._id %>">
                  <%= member.displayName %> 
                </a>
              </label>
            </div>
          <% } %>
        </form>
    </div>
  </div>
  <div class="mt-3">
    <button class="btn btn-danger me-2" form="members">Remove</button>
    <a href="/parties/<%= party._id %>" class="btn btn-warning">Cancel</a>
  </div>
</div>
