<% layout('layouts/boilerplate') %> 

<link rel="stylesheet" href="/styles/listShow.css">

<div class="row">
    <h1 class="text-center"><%= list.title %></h1>
    <div class="col-lg-4 col-md-6 ms-auto me-auto">
		<div class="card mb-3">
			<div class="card-body">
				<% for (const [i, item] of list.items.entries()) { %> 
				<p class="card-text">- <%= item.description %></p>
				<% } %>
                <div class="d-flex justify-content-between">
                    <a href="/lists" class="btn btn-primary me-2">Back</a>
                    <a href="/lists/<%= list._id %>/edit" class="btn btn-secondary">Edit</a>
                </div>
			</div>
		</div>
	</div>
</div>

