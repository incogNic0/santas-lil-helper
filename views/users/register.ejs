<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">Register</h1>
    <div class="col-lg-5 col-md-6 ms-auto me-auto card py-4 px-4">
        <form action="/users" method="POST" novalidate class="validate-form">
            <div class="mb-3 form-group">
                <label class="form-label" for="username">Username:</label>
                <label for="username" class="form-label text-muted">
                    Used to login. Must be unique.
                </label>
                <input 
                class="form-control" 
                type="text" 
                name="newUser[username]" 
                id="username"
                placeholder="login name"
                required
            >
            </div>
            <div class="mb-3 form-group">
                <label class="form-label" for="profileName">Profile Name:</label>
                <label for="profileName" class="form-label text-muted">
                    This is the name people will see.
                </label>
                <input 
                class="form-control" 
                type="text" 
                name="newUser[profileName]" 
                id="profileName"
                placeholder="display name"
                required
            >
            </div>
            <div class="mb-3 form-group">
                <label class="form-label" for="password">Password</label>
                <input 
                class="form-control" 
                type="password" 
                name="newUser[password]" 
                id="password"
                placeholder="password"
                required
            >
            </div>
            <div class="mb-3 form-group">
                <label class="form-label" for="confirmPass">Confirm</label>
                <input 
                class="form-control" 
                type="password" 
                name="newUser[confirmPass]" 
                id="confirmPass"
                placeholder="re-type password"
                required
            >
            </div>
            <div class="d-flex align-items-end">
                <button class="btn btn-primary me-3">Register</button>
                or
                <a href="/users/login" class="ms-3">Login</a>
            </div>
        </form>
    </div>
</div>