<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">Login</h1>
    <div class="col-lg-4 col-md-6 ms-auto me-auto card py-4 px-4">
        <form action="/users/login" method="POST" novalidate class="validate-form">
            <div class="mb-3 form-group">
                <label class="form-label" for="username">Username:</label>
                <input 
                class="form-control" 
                type="text" 
                name="user[username]" 
                id="username"
                placeholder="username"
                required
            >
            </div>
            <div class="mb-3 form-group">
                <label class="form-label" for="password">Password</label>
                <input 
                class="form-control" 
                type="password" 
                name="user[password]" 
                id="password"
                placeholder="password"
                required
            >
            </div>
            <div class="d-flex align-items-end">
                <button class="btn btn-primary me-3">Login</button>
                or
                <a href="/users/register" class="ms-3">Register</a>
            </div>
        </form>
    </div>
</div>